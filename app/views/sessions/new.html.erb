<h1 style="text-align:center;">Welcome to Secrets</h1>
<h3 style="text-align:center;">Login</h3>

<% if flash[:name] %>
  <% flash[:name].each do |item| %>
  <p><%= item %></p>
  <% end %>
<% end %>
<fieldset style="padding:20px;text-align:center;background-color:#BEEBFF;border:1px solid #777777">


<form action="/sessions" method="post">
  <input type="hidden" name="authenticity_token" value="<%=form_authenticity_token%>">
  <input  style="margin-bottom:10px;" type="text"  id="Email" name="email" placeholder="Email"><br>

  <input  style="margin-bottom:10px;" type="password" id="Password" name="password" placeholder="Password"><br>
  <input type="submit" name="Log In" value="Log In">

</form>
</fieldset>

<p style="font-size:11px;text-align:right;">Not registered, sign up <a href="/users/new">here</a></p>
